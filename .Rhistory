library(ggplot2)
library(dplyr)
load("/Users/LawrenceDeGeest/Desktop/notebook/research/dissertation/second_paper/defending-pg-cpr/data/full_data.Rda")
df <- full_data
df$treatment <- ifelse(df$treatment == 1, "CPR", "PG")
df$theft <- ifelse(df$theft == 1, "No theft", "Theft")
df %>% filter(theft == "No theft") %>%
group_by(treatment) %>%
ggplot(., aes(factor(treatment), coop_index, fill=factor(treatment))) +
scale_y_continuous(limits = c(0,1), breaks = c(0, 0.2, 0.4, 0.6, 0.8, 1)) +
labs(y="Average Cooperation", x="") +
stat_summary(fun.data = mean_cl, geom = "errorbar", col="black", width=0.1) +
stat_summary(fun.y="mean", geom="bar") + theme_minimal() + theme(legend.position="none"
)
